{% extends 'base.html.twig' %}

{% block body %}
    <h1>Chat</h1>
    <div id="chat-messages">
        {% for message in event.getMessages() %}
            <div>
                <strong>{{ message.getSender() }}</strong>
                <span>{{ message.getContent() }}</span>
            </div>
        {% endfor %}
    </div>
    <form action="{{ path('app_event_chat', {'eventId': event.getId()}) }}" method="post">
        <input type="text" name="content" placeholder="Enter your message" required>
        <button type="submit">Send</button>
    </form>
{% endblock %}

